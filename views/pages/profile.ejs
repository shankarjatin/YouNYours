<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word;
            background-image: linear-gradient(to right, #d800ff3d, #a94b4b); }
        /* #googleinfo{
            background-color:  #a67c00;
        } */
        .well{
            background-color: #fbdd47;

        }
        .btn-primary{
            background-color: #936e07;
        }
h1{
    font-weight: bolder;
}
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="bi bi-google"></span> Register Yourself</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6" id="googleinfo">
            <div class="well">
                <h3 class="text-danger"><span class="bi bi-google"></span> Google</h3>

                    <p>
                        <strong>Email</strong>: <%= email %><br>
                        <strong>Name</strong>: <%= name %><br>
                        <strong>Profile</strong>: <img src="<%=pic%>" width="100" height="100" alt="">
                    </p>

            </div>
        </div>

    </div>
    <form action="/good" method="post">
       
        <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Your Name</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="name" id="inputEmail3" value="<%= name %>" >
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <input type="email" class="form-control" name="email" id="inputEmail3" value="<%= email %>" >
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Priority number 1</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="prio1" id="inputEmail3"  >
            </div>
          </div>
          <div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Priority number 2</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" name="prio2" id="inputEmail3"  >
            </div>
          </div>

    
         


        
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>

</div>
</body>
</html>